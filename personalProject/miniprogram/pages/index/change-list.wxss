/* pages/index/change-list.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F5F0E0;
  height: 100vh;
}

.list_section{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
  background-color: #F5F0E0;
  height: 90vh;
  width: 100vw;
  overflow: auto;
}

.list_item{
  display: flex;
  justify-content: right;
  justify-items: right;
  margin: 10px;
  border-bottom: 1px solid #F0B020 ;
  width: 90vw;
}

.list_item text{
  flex: 70%;
  text-align: center;
  justify-content: center;
  color: #F0B020;
  font-size: 20px;
}

.delete_button{
  flex: 15%;
  margin-right: 10px;
  color: #F0B020;
  margin-top: 0%;
  display: inline-block;
  padding: 0;
}

.edit_button{
  flex: 15%;
  margin-right: 0%;
  color: #F0B020;
  display: inline-block;
  padding: 0;
}

.add_button{
  margin-bottom: 20px;
  color: #F0B020;
}

.util_section{
  display: flex;
}

.save_button{
  flex: 1;
  margin-right: 0%;
  color: #F0B020;
  display: inline-block;
  padding: 0;
}

.return_button{
  flex: 1;
  margin-right: 0%;
  color: #F0B020;
  display: inline-block;
  padding: 0;
}

.custom_modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  padding: 20px;
  background-color: white;
  border-radius: 10px;
  z-index: 999;
  justify-content: center;
  align-items: center;
}

.custom_modal text{
  font-size: 25px;
  text-align: center;
  margin-left: 35%;
  margin-right: 20%;
}

.custom_modal input {
  width: 50%;
  border: none;
  margin-bottom: 10px;
  margin-left: 50px;
  margin-top: 20px;
}

.custom_modal button {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 5px;
  margin-top: 10px;
}
