/* pages/profile-settings/profile-settings.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F5F0E0;
  color: #F0B020;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #F0B020;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid #F0B020;
  border-bottom: .5px solid #F0B020;
  color: #F0B020;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

button{
  color: #F0B020;
}